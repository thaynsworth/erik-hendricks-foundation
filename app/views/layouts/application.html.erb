<!DOCTYPE html>
<html>
<head>
  <title>ErikHendricksFoundation</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	  <div class="wrapper">
	  	<div class="container-fluid">
	  		<div class="row main-nav">  			
			    <header>
		        <div class="col-xs-6 col-sm-6 col-md-6">
		          <h4><%= link_to "Erik Hendrick's Foundation", root_path%></h4>
		        </div>
		        <nav class="col-xs-6 col-sm-6 col-md-6">
		          <ul>
		          	<li><%= link_to "Donate", donate_path %></li>
		          	<li><%= link_to "Hairy Cell Leukemia", hcl_path %></li>
		          	<li><%= link_to "Events", events_path %></li>
		            <li><%= link_to "Erik Hendricks", about_path %></li>
		            <li><%= link_to "Contact", contact_path %></li>
		          </ul>  
		        </nav>  
			    </header>	   
		    </div>
		  </div>  

			<div class="container">
				<div class="row">
					<%= yield %>
				</div>
			</div>
	    
	    <div class="push"></div>
	  </div>
		
		<div class="container-fluid">
	  	<div class="row">
	  		<div class="col-xs-12 col-sm-12 col-md-12">
			  	<footer class="footer">
					  <% if logged_in? %>
					  <ul>
					    <li><%= link_to "LOG OUT", logout_path, method: :delete %></li>
					  </ul>
					  <% else %>
					  <ul>
					    <li><%= link_to "LOG IN", login_path %></li>
					  </ul>
					  <% end %> 
				  </footer>
				</div>
			</div>
		</div>

</body>
</html>
