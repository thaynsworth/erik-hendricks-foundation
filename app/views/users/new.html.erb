
<div class="container">
  <div class="row">

    <div id="signup-menu" class="col-xs-12 col-sm-12 col-md-12 text-center">
      <h1>Create New Admin</h1> 
      <div>
        <%= form_for(@user) do |f| %>

          <%= f.label :name %>
          <%= f.text_field :name %>

          <%= f.label :email %>
          <%= f.text_field :email %>
          
          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation %>

          <%= f.submit "Create my account" %>
        <% end %>
      </div>
    </div>

  </div>
</div>



