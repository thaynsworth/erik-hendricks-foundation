
<div class="container">
  <div class="row">
    
    <div id="login-menu" class="col-xs-12 col-sm-12 col-md-12 text-center">
      <h1>Login</h1>
      <div>
        <%= form_for(:session, url: login_path) do |f| %>

          <%= f.label :email %>
          <%= f.text_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.submit "Log in" %>
        <% end %>

        <p><%= link_to "Home", root_path %></p>
      </div>
    </div> 

  </div>
</div>

 